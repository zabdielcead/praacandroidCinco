<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ThirdActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/edTel"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/imgBtnCall"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.798"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="48dp" app:srcCompat="@android:drawable/stat_sys_phone_call"
            android:id="@+id/imgBtnCall"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/edTxtWeb"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/edTel"
            android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
    />
    <ImageButton
            android:layout_width="61dp"
            android:layout_height="48dp" app:srcCompat="@android:drawable/ic_menu_view"
            android:id="@+id/imgWeb"
            android:background="@color/colorPrimary"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnCall" app:layout_constraintStart_toEndOf="@+id/edTxtWeb"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"/>
    <ImageButton
            android:layout_width="411dp"
            android:background="#E91E63"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageButton3"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/edTxtWeb"
            app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>